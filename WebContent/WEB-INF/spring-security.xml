                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    
	
	
	<http auto-config="true">

        <intercept-url pattern="/administration" access="ROLE_ADMIN" />
        <intercept-url pattern="/administration.device.active.list" access="ROLE_TESTER,ROLE_ADMIN" />
        <intercept-url pattern="/administration.*" access="ROLE_ADMIN" />
        <intercept-url pattern="/test" access="ROLE_TESTER,ROLE_ADMIN" />
        <intercept-url pattern="/test.*" access="ROLE_TESTER,ROLE_ADMIN" />
        <intercept-url pattern="/report" access="ROLE_TESTER,ROLE_ADMIN" />
        <intercept-url pattern="/report.*" access="ROLE_TESTER,ROLE_ADMIN" />
        <intercept-url pattern="/home" access="ROLE_TESTER,ROLE_ADMIN" />
        <intercept-url pattern="/home.*" access="ROLE_TESTER,ROLE_ADMIN" />
        <intercept-url pattern="/home.*" access="ROLE_TESTER,ROLE_ADMIN" />
        
        <form-login login-page="/login" default-target-url="/home?filter=-1"    always-use-default-target="true"  authentication-failure-url="/login.error" />  
        <logout logout-success-url="/login" invalidate-session="false"  delete-cookies="JSESSIONID" />
        <session-management invalid-session-url="/session.error" >
<!--         	<concurrency-control error-if-maximum-exceeded="true" max-sessions="1"></concurrency-control> -->
    	</session-management>
        
		        
